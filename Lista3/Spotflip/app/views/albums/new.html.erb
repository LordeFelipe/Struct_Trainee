<h1>Novo Album</h1>

<%= form_with model: @album do |form| %>
  <div class="field">
    <%= form.label :name, 'Nome' %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :artist, 'Artista' %>
    <%= form.text_field :artist %>
  </div>

  <div class="actions">
    <%= form.submit "Criar album" %>
  </div>
<% end %>

<%= link_to 'Voltar', albums_path %>